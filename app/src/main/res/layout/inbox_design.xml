<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/rel_inbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lin_inbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:gravity="center_horizontal"
                android:textColor="@color/azra2_new"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/date_txt"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/message"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/inbox_txt"/>

        </LinearLayout>

        <TextView
            android:id="@+id/inbox_body"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/lin_inbox"
            android:background="@drawable/inbox_text_design"
            android:textColorHint="@color/gray"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center" />


        <ImageView
            android:id="@+id/delete_img_inbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inbox_body"
            android:backgroundTint="@color/azra2_new"
            android:background="@drawable/ic_delete_red_24dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>